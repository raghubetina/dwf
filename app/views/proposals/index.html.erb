<h1>Listing proposals</h1>

<table>
  <tr>
    <th>ID</th>
    <th>User</th>
    <th>Groupon ID</th>
    <th>Proposed Datetime</th>
    <th>Min companions</th>
    <th>Max companions</th>
    <th>Tipped</th>
    <th>Event created</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @proposals.each do |proposal| %>
  <tr>
    <td><%= proposal.id %></td>
    <td><%= proposal.user_id %></td>
    <td><%= proposal.groupon_id %></td>
    <td><%= proposal.proposed_datetime %></td>
    <td><%= proposal.min_companions %></td>
    <td><%= proposal.max_companions %></td>
    <td><%= proposal.tipped %></td>
    <td><%= proposal.event_created %></td>
    <td><%= link_to 'Show', proposal %></td>
    <td><%= link_to 'Edit', edit_proposal_path(proposal) %></td>
    <td><%= link_to 'Destroy', proposal, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

